{
  "name": "ts-react-parcel",
  "version": "1.5.0",
  "description": "Typescript with React, using parcel bundler",
  "repository": {
    "type": "git",
    "url": "https://github.com/emaren84/ts-react-parcel"
  },
  "main": "index.js",
  "scripts": {
    "develop": "parcel ./src/index.html --no-cache",
    "build": "parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "Ahn Dohyung",
  "license": "MIT",
  "dependencies": {
    "antd": "^3.9.1",
    "helpful-decorators": "^1.7.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-measure": "^2.1.0",
    "react-router-dom": "^4.3.1",
    "react-tiny-virtual-list": "^2.2.0",
    "styled-components": "^3.4.5"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.2.0",
    "parcel-bundler": "^1.9.3",
    "parcel-plugin-typescript": "^1.0.0",
    "prettier": "^1.13.7",
    "react-test-renderer": "^16.4.1",
    "react-testing-library": "^4.1.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  }
}
